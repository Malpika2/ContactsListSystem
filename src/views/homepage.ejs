<%- include ('partials/_header')  %>
<div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <a href="/editProfile" class="btn btn-info float-right">Edit my profile</a>
          <a href="/logout" class="btn btn-secondary float-right">Log out</a>
        </div>
        <div class="col-md-12 col-lg-4 card text-center pt-5">
          <h3>Register contact</h3>
          <form action="/saveContact" id="register-form" method="POST">
            <input class="form-control" type="text" name="name" placeholder="Name"  required/>
            <input class="form-control" type="text" name="lastName" placeholder="Last Name"  required/>
            <input class="form-control" type="email" name="email" placeholder="email@example.com"  required/>
            <input class="form-control" type="text" name="number" placeholder="Contact number"  required/>
            <button class="btn btn-success btn-block">Create</button>
          </form>
        </div>
        <div class="col-md-12 col-lg-8 pt-5">
          <h3>Contact List</h3>
          <div class="table-responsive">
          <table id="tablaContactos" class="table table-hover table-bordered">
            <thead>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Contact Number</th>
              <th>Actions</th>
            </thead>
            <tbody>
              <% if(contacts){ %>
                <% for( var i = 0; i < contacts.length; i++){ %>
                  <tr>
                    <td><%= contacts[i]['name'] %></td>
                    <td><%= contacts[i]['lastName'] %></td>
                    <td><%= contacts[i]['email'] %></td>
                    <td><%= contacts[i]['number'] %></td>
                    <td><a href="/delete/<%= contacts[i]['contact_id']%>" class="btn btn-block btn-danger">Delete</a>
                        <a href="/edit/<%= contacts[i]['contact_id']%>" class="btn btn-block btn-warning">Edit</a></td>
                  </tr>
                <% } %>
              <% } %>
            </tbody>
          </table>
        </div>
        </div>
      </div>
    </div>

<%- include ('partials/_footer')  %>